{# View :: Single faculty-member #}

{% extends "base.twig" %}


{% block header %}
{% endblock %}

{% block content %}


{# Header #}
<header class="">
  <div class="clearfix container py2 sm-py4">

    <div class="sm-col sm-col-4">
      <img class="block mx-auto br-circle" src="{{post.thumbnail|resize(300, 300)}}" alt="faculty photo" />
    </div>

    <div class="sm-col sm-col-8 px2">
      <h2 itemprop="headline">
        {{post.title}}
      </h2>
      <h4 class="regular link-light-grey mb3">{{post.get_field('wpcf-job-title')}}</h4>
      <blockquote class="ml0" cite="http://">
        <p>{{ post.get_field('wpcf-faculty-quote') }}
        </p>
        <cite>&nbsp;&nbsp;{{post.title}}</cite>
      </blockquote>
    </div>

  </div>
</header>

<article class="post-type-{{post.post_type}} bg-alternate" id="post-{{post.ID}}" role="article" itemscope itemtype="http://schema.org/Article">

<div class="container clearfix py2 sm-py4 ">



  {# Content #}
  <div class="sm-px4 sm-col sm-col-8" itemprop="articleBody">
    {{post.content}}
  </div>

  <div class="sm-col sm-col-4 card">
    {% if post.get_field('wpcf-video-embed-code') %}
    <div class="flex-video widescreen">
      {{post.get_field('wpcf-video-embed-code')}}
    </div>
    {% endif %}

    <div class="px2 mb2">


    {% if post.get_field('wpcf-faculty-degrees') %}
    <h5>Degrees</h5>
    <small class="">
      {{post.get_field('wpcf-faculty-degrees')}}
    </small>
    {% endif %}

    {% if post.get_field('wpcf-courses-taught') %}
    <h5>Courses Taught</h5>
    <small class="">
      {{post.get_field('wpcf-courses-taught')}}
    </small>
    {% endif %}

    </div>
  </div>

  </div>

</article>

{% endblock %}
