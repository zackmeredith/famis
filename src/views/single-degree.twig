{% extends "base.twig" %}


{% block header_title %}
<div class="center table-cell align-middle relative white">
  <span class="uppercase block degree-block-degtype">{{post.get_field('wpcf-degree-type')}}</span>

<h2 class="page-header-title mt1" style="letter-spacing: 0.02em;">{{post.get_field('wpcf-degree-title-no-type')}}</h2>
<hr class="mb3" style="background: white; width: 300px;">
<a class="py2" href="https://admissions.loyno.edu/apply/" target="_blank"><button class="btn btn-accent-fill btn-round btn-outline-round" type="button" name="button"><span class="p3">Apply Now</span></button></a>
</div>
{% endblock %}


{% block content %}

  <article class="post-type-{{page.post_type}}" id="post-{{page.ID}}" itemscope itemtype="http://schema.org/WebPage">

    {# Content #}

    <div class="relative py2">
      <div class="container">
      <div class="px2 sm-p2 relative sidebar-menu sm-show">
        <span class="sidebar-nav-drop-button block md-hide">
          <h4 class="m0 inline-block small py2">Degree Links</h4>
          <svg id="triangleDown" class="sidebar-nav-drop-button-icon md-hide" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="8" height="8" fill="currentcolor">
            <path d="M4 8 H28 L16 26 z"></path>
          </svg>
        </span>
        <ul class="list-reset md-show sidebar-nav inline-block py1 mb0">
          <li class="py1 px2 inline-block"><a href="/degree-programs" class="secondary-text-link txt-light"><i class="fa fa-chevron-left mr1"></i>All Degrees</a></li>
          <li class="py1 px2 inline-block"><a class="secondary-text-link txt-light"  rel="scrolling" href="#degreeguideanchor">Degree Guide</a></li>
          <li class="py1 px2 inline-block"><a class="secondary-text-link txt-light" rel="scrolling" href="#careeranchor">Careers</a></li>
          <li class="py1 px2 inline-block"><a class="secondary-text-link txt-light" rel="scrolling" href="#studentworkanchor">Student Work</a></li>
          <li class="py1 px2 inline-block"><a class="secondary-text-link txt-light" href="{{page.get_field('wpcf-dpcl-url')}}" target="_blank">DPCL</a></li>
        </ul>
        <hr class="mt0 sm-mb2">
      </div>
      <div class="clearfix py2">


      <div class="md-col md-col-8 sm-mr4 p2 mx-auto">
        <h1 class="h1 mt0 capitalize" style="font-size: 2.5rem;">{{page.get_field('wpcf-highlighted-text')}}</h1>
        <hr class="hr-sm-accent ml0 mb4">

        <p class="txt-light-grey mb2">{{page.content}}</p>
        <div class="py2">

        <h4 class="mb2">Get Started</h4>
        <a class="mb2 inline-block" href="https://admissions.loyno.edu/register/inquiryform" target="_blank"><button class="mb2 block btn btn-accent btn-outline" type="button" name="button">Request Information</button></a>
        <a class="mb2 inline-block sm-px1" href="/how-to-apply"><button class="block btn btn-accent btn-outline" type="button" name="button">How to Apply</button></a>
        </div>

      </div>
