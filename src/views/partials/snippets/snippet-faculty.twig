{# View :: Partial :: Snippet - Faculty #}

<article class="snippet snippet-{{post.post_type}} sm-col sm-col-6 md-col-4 lg-col-3 mb4" id="snippet-{{post.ID}}" style="height: 22rem" role="article" itemscope itemtype="http://schema.org/Article">
  {% block content %}

    {# Thumbnail #}
    {% if post.get_thumbnail %}
    <div class="relative mx-auto" style="width: 90%;">
      <a class="white" href="{{post.link}}" itemprop="url">
      <div class="mx-auto" style="background: url('{{post.thumbnail|resize(300, 300)}}') center top; background-size: cover; height: 300px;">
        <div class="hover-show fill-container">
          <div class="overlay"></div>
            <div class="overlay-container table relative fill-container">
              <div class="table-cell align-middle">

              <button class="white btn btn-outline" type="button" name="button">Read Full Bio</button>
              </div>
            </div>

        </div>
      </div>

      </a>
      </div>
      <meta itemprop="thumbnailUrl" content="{{post.thumbnail.src}}">
    {% endif %}

    {# Header #}
    <header class="m0 mx-auto">
      <h4 class="mb1 p0" itemprop="headline">
        <a class="black" href="{{post.link}}" itemprop="url" title="{{post.title}}">
          {{post.title}}
        </a>
      </h4>
      <h5 class="block m0 mx-auto link-light-grey regular"  style="width: 66%;">{{post.get_field('wpcf-job-title')}}</h5>
    </header>

    <!-- {# Content #}
    <div itemprop="articleBody">
      <p>
        {{faculty.get_preview(50, false, "")}}
      </p>
    </div> -->

  {% endblock %}
</article>
