{# View :: Partial :: Snippet - Post #}

<article class="border p2 snippet snippet-{{post.post_type}}" id="snippet-{{post.ID}}" role="article" itemscope itemtype="http://schema.org/Article">
  {% block content %}

    {# Header #}
    <header class="m0">
      <h4 class="m0 block" itemprop="headline">
        <a class="black" href="{{post.link}}" itemprop="url" title="{{post.title}}">
          {{post.title}}
        </a>
      </h4>


          <h5 class="txt-md-grey inline-block">
            {{post.get_field('wpcf-grad-degree')}}
          </h5>


          <h5 class="accent-color inline-block">
            {{post.get_field('wpcf-grad-year')}}
          </h5>



    </header>
    <p>
      {{post.get_preview(30, false, "")}}
    </p>
    <a href="{{post.link}}" class="btn btn-outline">Read More</a>
    <!-- {# Content #}
    <div itemprop="articleBody">
      <p>
        {{post.get_preview(50, false, "")}}
      </p>
    </div> -->

    <!-- <a class="mt2 block black" href="{{post.link}}"><button class="btn btn-outline" type="button" name="button">Read More</button></a> -->

  {% endblock %}
</article>
