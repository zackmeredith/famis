    <a href="" class="srt">Search<input type="submit" class="search-submit" value="Search"></a>
  </form>


  <div class="flex flex-center-center">



    <div class="table sm-show">
      <span class="inline-block table-cell align-middle" style="font-size: 0.75rem; ">
        <a href="/how-to-apply">
          <button class="btn btn-outline btn-outline-round btn-accent uppercase" name="button" type="button">Apply</button>
        </a>
