{# View :: News #}

{% extends "base.twig" %}

{% block header %}

    {% for post in main_feat_post.posts(1, 'post') %}

    <div class="relative overlay-hover-dark flex flex-center" style="background: url('{{post.thumbnail}}') center; background-size: cover; height: 60vh;">

      <div class="overlay"></div>

      <div class="hero-content white relative container-small p2 sm-p3">
        <a href="{{post.category.link}}">
          <button class="btn btn-accent-fill" style="font-weight: 700; font-family: Avenir; font-size: 0.8rem;" name="button" type="button">
            {{post.category}}
          </button>
        </a>
        <a class="white" href="{{post.link}}">
          <h1 class="mt1">{{post.title}}</h1>
        </a>

          <span class=""></span>

      </div>
    </div>

    {% endfor %}
  <div class="clearfix">
    {% for post in secondary_feat_post.posts(3, 'post') %}
    <div class="sm-col sm-col-4 secondary-feat-post relative overlay-hover-dark" style="background: url('{{post.thumbnail}}') center; background-size: cover; height: 300px">
      <!-- <div class="col-12 table secondary-feat-post relative" style="background: #222"> -->
      <div class="overlay"></div>
      <div class="absolute bottom-0 left-0 p3">
        <a class="white" href="{{post.link}}">
          <h3 class="m0">{{post.title}}</h3>
        </a>
        <a class="accent-color relative hover-bar inline-block link-reset" href="{{post.category.link}}">
          <h4 class="accent-color m0 relative">
            {{post.category}}
          </h4>
        </a>
      </div>
    </div>


    {% endfor %}
  </div>


{% endblock %}

{% block content %}

<article class="post-type-{{page.post_type}}" id="post-{{page.ID}}" itemscope itemtype="http://schema.org/WebPage">
  <div class="clearfix mb2 sm-mb4 container">
    <div class="">
      <div class="py3">
        <h4 class="center py2">Recent Stories</h4>
        <hr>
      </div>
      {# Content #}
      <div class="clearfix">
        {% for post in posts %}
        <div class="news-post sm-col sm-col-6 md-col-3 px2 sm-p2 mx-auto">
          {% include ['partials/snippets/snippet-post.twig'] %}
        </div>
        {% endfor %}
      </div>
    </div>

  </div>

</article>
